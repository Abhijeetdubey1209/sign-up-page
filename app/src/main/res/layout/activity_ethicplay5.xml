<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient1"
    android:layout_height="match_parent"
    tools:context=".ethicplay5">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textColor="#d55560"
        android:text="Hello User,"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="JOIN THE CLEAN SPORT MOVEMENT!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="5dp"
        android:text="Register now to access exclusive features and stay up-to-date on anti doping regulations."
        android:textSize="18sp"
        android:gravity="center"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="350dp"
        android:id="@+id/lottie"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@id/lottie"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Register Now , to get your"
        android:textSize="19sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personalised dashboard and profile."
        android:textSize="19sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:id="@+id/et5back"
            app:cardBackgroundColor="#4288A8"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/leftarrow"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="BACK"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            app:cardBackgroundColor="#d55560"
            android:layout_gravity="end"
            android:id="@+id/et5register"
            android:layout_marginLeft="130dp"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="REGISTER"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="25sp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>